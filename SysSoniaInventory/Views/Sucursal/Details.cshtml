@model SysSoniaInventory.Models.ModelSucursal

@{
    ViewData["Title"] = "Details";
}

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">

            <h3 class="card-title text-info font-weight-bold">Detalles de la Sucursal</h3>
            <hr class="linea-info" />
            <div class="row">
                <div class="col-12">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label text-light" asp-for="Name">Nombre:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control readonly-input" asp-for="Name" value="@Model.Name" readonly />
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" asp-for="Address">Dirección:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control readonly-input" asp-for="Address" value="@Model.Address" readonly />
                        </div>
                    </div>
                </div>
            </div>
            <hr class="linea-info" />
            <div class="d-flex justify-content-end">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-warning font-weight-bold"><i class="mdi mdi-file-restore btn-icon-prepend"></i>Editar</a>
                <a asp-action="Index" class="btn btn-outline-secondary font-weight-bold ml-2">Regresar</a>
            </div>

        </div>
    </div>
</div>
