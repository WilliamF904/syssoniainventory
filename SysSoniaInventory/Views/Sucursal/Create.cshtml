@model SysSoniaInventory.Models.ModelSucursal

@{
    ViewData["Title"] = "Create";
}

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">

            <h3 class="card-title text-primary font-weight-bold">Crear nueva sucursal</h3>
            <hr class="linea-primary" />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" asp-for="Name">Nombre:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" maxlength="75" asp-for="Name" placeholder="Ingrese el nombre de la sucursal" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" asp-for="Address">Dirección:</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" asp-for="Address" maxlength="100" placeholder="Ingrese la dirección" required />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="linea-primary" />
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-primary font-weight-bold"><i class="mdi mdi-file-check btn-icon-prepend"></i>Guardar</button>
                    <a asp-action="Index" class="btn btn-outline-secondary font-weight-bold ml-2">Regresar</a>
                </div>
            </form>

        </div>
    </div>
</div>
