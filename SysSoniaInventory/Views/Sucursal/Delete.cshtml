@model SysSoniaInventory.Models.ModelSucursal

@{
    ViewData["Title"] = "Delete";
}

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">

            <h3 class="card-title font-weight-bold text-danger">Eliminar Sucursal</h3>
            <p class="text-warning font-weight-bold">¿Está seguro de que desea eliminar esta sucursal?</p>

            <form asp-action="Delete" class="mt-4">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label text-light" asp-for="Name">Nombre</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control readonly-input" asp-for="Name" value="@Model.Name" readonly />
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label" asp-for="Address">Dirección</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control readonly-input" asp-for="Address" value="@Model.Address" readonly />
                            </div>
                        </div>
                    </div>
                </div>

                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger font-weight-bold">Eliminar</button>
                    <a asp-action="Index" class="btn btn-outline-secondary font-weight-bold ml-2">Regresar</a>
                </div>
            </form>

        </div>
    </div>
</div>
