@model SysSoniaInventory.Models.ModelUser

@{
    ViewData["Title"] = "Edit";
}

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title text-success font-weight-bold">Editar información de Usuario</h3>
            <hr class="linea-success" />
            <form id="editUserForm" asp-action="Edit" class="form-sample" enctype="multipart/form-data">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="RegistrationDate" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" asp-for="IdRol">Rol: </label>
                            <div class="col-sm-9">
                                <select class="form-control text-light" asp-for="IdRol" asp-items="ViewBag.IdRol" required></select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" asp-for="IdSucursal">Sucursal: </label>
                            <div class="col-sm-9">
                                <select class="form-control text-light" asp-for="IdSucursal" asp-items="ViewBag.IdSucursal" required></select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label text-light" asp-for="Name">Nombre: </label>
                            <div class="col-sm-9">
                                <input type="text" maxlength="50" class="form-control" asp-for="Name" placeholder="Ingrese el nombre" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" asp-for="LastName">Apellido: </label>
                            <div class="col-sm-9">
                                <input type="text" maxlength="50" class="form-control text-light" asp-for="LastName" placeholder="Ingrese el apellido" required />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" asp-for="Tel">Teléfono: </label>
                            <div class="col-sm-9">
                                <input type="text" minlength="8" class="form-control" asp-for="Tel" placeholder="Ingrese el teléfono" />
                                <span asp-validation-for="Tel" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" asp-for="Email">Correo: </label>
                            <div class="col-sm-9">
                                <input type="email" maxlength="75" class="form-control text-light" asp-for="Email" placeholder="Ingrese el correo" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" asp-for="Password">Contraseña: </label>
                            <div class="col-sm-9">
                                <input type="password" maxlength="20" maxlength="8" class="form-control" asp-for="Password" placeholder="Modificar contraseña" />


                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label" asp-for="Estatus">Estatus: </label>
                            <div class="col-sm-9">
                                <select class="form-control text-light" asp-for="Estatus">
                                    <option value="1">Activo</option>
                                    <option value="0">Inactivo</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>


                <hr class="linea-success" />
                <div class="d-flex justify-content-end">
                    <!-- Botón para abrir el modal -->
             
                    <button type="button" class="btn btn-outline-primary font-weight-bold" data-toggle="modal" data-target="#ConfirmModal"><i class="mdi mdi-file-check btn-icon-prepend"></i>Guardar</button>
                    <a asp-action="Index" class="btn btn-outline-secondary font-weight-bold ml-2">Volver a la lista</a>
                </div>




                <!-- Modal -->
                <div class="modal fade" id="ConfirmModal" tabindex="-1" aria-labelledby="ConfirmModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content shadow-lg border-0">
                            <div class="modal-header bg-dark text-white">
                                <h5 class="modal-title fw-bold" id="ConfirmModalLabel">⚠ Confirmar acción</h5>
                                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" data-close-modal></button>
                            </div>
                            <div class="modal-body">
                                <div class="text-center mb-3">
                                    <!-- Mostrar el nombre del usuario autenticado -->
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        var userName = User.FindFirst(System.Security.Claims.ClaimTypes.Name)?.Value;
                                        <h4 class="fw-semibold text-uppercase">@userName</h4>
                                    }
                                </div>

                                <!-- Input para validar contraseña -->
                                <div class="form-group row">
                                    <label class="col-sm-12 col-form-label fw-semibold text-center mb-2" for="currentPasswordIdentity">
                                        Contraseña de validación:
                                    </label>
                                    <div class="col-sm-12">
                                        <input type="password" maxlength="20" minlength="8"
                                               class="form-control rounded-pill shadow-sm"
                                               id="currentPasswordIdentity"
                                               name="currentPasswordIdentity"
                                               placeholder="Introduce tu contraseña"
                                               required />
                                    </div>
                                </div>
                                <hr />
                                <!-- Mensaje de ayuda -->
                                <p class="text-center text-muted mt-3" style="font-size: 0.9rem;">
                                    Para guardar cambios, debes confirmar tu identidad introduciendo tu contraseña.
                                </p>
                            </div>
                            <div class="modal-footer justify-content-center">
                                <button type="submit" class="btn btn-warning fw-bold rounded-pill px-4">
                                    <i class="mdi mdi-file-check btn-icon-prepend"></i> Guardar
                                </button>
                                <button type="button" class="btn btn-secondary rounded-pill px-4" data-bs-dismiss="modal">Cerrar</button>
                            </div>
                        </div>
                    </div>
                </div>















            </form>
        </div>
    </div>
</div>