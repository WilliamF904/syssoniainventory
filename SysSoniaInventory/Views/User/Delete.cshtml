@model SysSoniaInventory.Models.ModelUser

@{
    ViewData["Title"] = "Delete";
}

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title font-weight-bold">Eliminar Usuario</h3>
            <p class="text-danger">¿Está seguro de que desea eliminar este usuario?</p>

            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Teléfono</dt>
                <dd class="col-sm-9">@Model.Tel</dd>

                <dt class="col-sm-3 font-weight-bold">Nombre</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3 font-weight-bold">Apellido</dt>
                <dd class="col-sm-9">@Model.LastName</dd>

                <dt class="col-sm-3 font-weight-bold">Correo Electrónico</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3 font-weight-bold">Estatus</dt>
                <dd class="col-sm-9">@(Model.Estatus == 1 ? "Activo" : "Inactivo")</dd>

                <dt class="col-sm-3 font-weight-bold">Fecha de Registro</dt>
                <dd class="col-sm-9">@Model.RegistrationDate</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger font-weight-bold">Eliminar</button>
                    <a asp-action="Index" class="btn btn-outline-secondary font-weight-bold ml-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
