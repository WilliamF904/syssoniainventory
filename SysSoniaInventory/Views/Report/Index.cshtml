@model IEnumerable<SysSoniaInventory.Models.ModelReport>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title  font-weight-bold">Lista de Reportes</h3>
              
            </div>
        </div>
    </div>
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
            </div>
        </div>
    </div>

    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Tipo de Reporte</th>                       
                                <th>Estatus</th>
                                <th>Fecha de Inicio</th>
                                <th>Fecha de Finalización</th>          
                                <th>Id de Relación</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody class="txt-whithe">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.TypeReport)</td>   
                                    <td>@Html.DisplayFor(modelItem => item.Estatus)</td>  
                                    <td>@Html.DisplayFor(modelItem => item.StarDate)</td>
                                    @if (item.EndDate >= item.StarDate)
                                    {
                                        <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                                    }
                                    else{
                                    <td></td>
                                    }

                                    <td>
                                        @if (item.TypeReport == "Stock Bajo")
                                        {
                                            <span>Id Producto: @item.IdRelation</span>
                                        }
                                        else if (item.TypeReport == "Reporte Usuario")
                                        {
                                            <span>Id Usuario: @item.IdRelation</span>
                                        }
                                        else
                                        {
                                            @Html.DisplayFor(modelItem => item.IdRelation)
                                        }
                                    </td>

                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info primary">Detalles</a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning">Editar</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
