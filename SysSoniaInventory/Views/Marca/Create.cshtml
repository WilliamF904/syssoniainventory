@model SysSoniaInventory.Models.ModelMarca

@{
    ViewData["Title"] = "Create";
}

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title text-primary font-weight-bold">Crear Marca</h3>
            <hr class="linea-primary" />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label text-light" asp-for="Name">Nombre de la marca:</label>
                        <div class="col-sm-9">
                            <input type="text" maxlength="60" class="form-control" asp-for="Name" placeholder="Ingrese el nombre de la marca" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label text-light" asp-for="Description">Descripción de la marca:</label>
                        <div class="col-sm-9">
                            <input type="text" maxlength="200" class="form-control" asp-for="Description" placeholder="Ingrese la descripción de la marca" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <hr class="linea-primary" />
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-primary font-weight-bold" value="Create">
                        <i class="mdi mdi-file-check btn-icon-prepend"></i>Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary font-weight-bold ml-2">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>
