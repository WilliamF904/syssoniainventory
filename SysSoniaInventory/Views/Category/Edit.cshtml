@model SysSoniaInventory.Models.ModelCategory

@{
    ViewData["Title"] = "Edit";
}


<div class="col-7 grid-margin">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title font-weight-bold">Editar Categoria</h3>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label text-light" asp-for="Name">Nombre de la categoria</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <input type="submit" value="Guardar" class="btn btn-primary font-weight-bold" />
                    <a asp-action="Index" class="btn btn-outline-secondary font-weight-bold ml-2">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>