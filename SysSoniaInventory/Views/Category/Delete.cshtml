@model SysSoniaInventory.Models.ModelCategory

@{
    ViewData["Title"] = "Delete";
}

<div class="col-7 grid-margin">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title font-weight-bold">Eliminar Categoria</h3>
            <h4>¿Está seguro de que desea eliminar esta categoria?</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-end">
                    <input type="submit" value="Eliminar" class="btn btn-danger font-weight-bold" />
                    <a asp-action="Index" class="btn btn-outline-secondary font-weight-bold ml-2">Volver a la lista</a>
                </div>
            </form>
        </div>
    </div>
</div>