@model SysSoniaInventory.Models.ModelCategory

@{
    ViewData["Title"] = "Create";
}



<div class="col-7 grid-margin">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title font-weight-bold">Crear Categoria</h3>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             
                        <div class="col-md-12">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label text-light" asp-for="Name">Nombre de la categoria</label>
                                <div class="col-sm-9">
                                    <input type="text" class="form-control" asp-for="Name" placeholder="Ingrese la categoria" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-outline-primary font-weight-bold" value="Create">Guardar</button>
                    <a asp-action="Index" class="btn btn-outline-secondary font-weight-bold ml-2">Volver a la lista</a>
                </div>
            </form>

        </div>
    </div>
</div>






