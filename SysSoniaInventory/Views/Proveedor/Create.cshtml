@model SysSoniaInventory.Models.ModelProveedor

@{
    ViewData["Title"] = "Create";
}
<style>
    .textarea-create {
        resize: none;
        height: 75px !important;
        overflow-y: auto;
        word-wrap: break-word;
    }
</style>
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">

            <h3 class="card-title text-primary font-weight-bold">Crear Proveedor</h3>
            <hr class="linea-primary" />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label text-light" asp-for="Name">Nombre del proveedor: </label>
                            <div class="col-sm-9">
                                <input type="text" maxlength="75" class="form-control" asp-for="Name" placeholder="Ingrese el nombre del proveedor - Máx:75 caracteres" required />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label text-light" asp-for="Tel">Teléfono: </label>
                            <div class="col-sm-9">
                                <input type="tel" minlength="8" class="form-control" asp-for="Tel" placeholder="Ingrese un numero de teléfono" />
                                <span asp-validation-for="Tel" class="text-danger"></span>
                            </div>
                        </div>
                    </div> 

                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label text-light" asp-for="Email">Email: </label>
                            <div class="col-sm-9">
                                <input type="email" maxlength="75" class="form-control" asp-for="Email" placeholder="Ingrese un correo electrónico" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label text-light" asp-for="Description">Descripción: </label>
                            <div class="col-sm-9">
                                <textarea type="text" maxlength="250" class="form-control textarea-create" asp-for="Description" placeholder="Ingrese una descripción (opcional) - Máx:250 caracteres"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                  
                </div>
                <hr class="linea-primary" />
                <div class="d-flex justify-content-end">
                    <button type="submit" value="Create" class="btn btn-outline-primary font-weight-bold"><i class="mdi mdi-file-check btn-icon-prepend"></i>Guardar</button>
                    <a asp-action="Index" class="btn btn-outline-secondary font-weight-bold ml-2">Volver a la lista</a>
                </div>
        </form>
    </div>
</div>
</div>
