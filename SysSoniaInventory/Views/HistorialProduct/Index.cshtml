@model IEnumerable<SysSoniaInventory.Models.ModelHistorialProduct>

@{
    ViewData["Title"] = "Index";
}


<div class="row">
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h1 class="card-title">Lista de Registros</h1>
               

            </div>
        </div>
    </div>
    <div class="col-lg-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
            </div>
        </div>
    </div>


    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">

                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>
                                   Nombre del usuario
                                </th>
                                <th>
                                   Id del producto
                                </th>
                               
                                <th>
                                   Fecha del registro
                                </th>
                                <th>
                                   Hora del registro
                                </th>
                                <th>
                                   Acción realizada
                                </th>
                                

                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NameUser)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IdProduct)
                                    </td>
                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Date)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Time)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RazonCambioAuto)
                                    </td>
                                  
                                    <td>
                                       
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalles</a>
                                       
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>